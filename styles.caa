body {
  font-family: Arial, sans-serif;
  text-align: center;
  padding: 20px;
}

.container {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background: #f9f9f9;
}

h1 {
  font-size: 24px;
  margin-bottom: 20px;
}

select, button {
  margin: 10px 0;
  padding: 10px;
  font-size: 16px;
}

.result {
  margin-top: 20px;
  font-size: 18px;
}
